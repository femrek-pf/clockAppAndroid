<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg0"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg0"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/drawer_tile0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/bg2"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mevcut Ayarlar"
                    android:textColor="@color/onBg"
                    android:textSize="24sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/bg0" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Başlangıç"
                    android:textColor="@color/onBg"
                    android:textSize="24sp" />

                <dev.faruke.helperclock.view.customViews.ClockEditView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:onClickAction="replace"
                    android:layout_marginTop="8dp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg0" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Bitiş"
                    android:textColor="@color/onBg"
                    android:textSize="24sp"
                    />

                <dev.faruke.helperclock.view.customViews.ClockEditView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:onClickAction="replace"
                    android:layout_marginTop="8dp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg0" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Uyarılar"
                    android:textColor="@color/onBg"
                    android:textSize="24sp"
                    />

                <dev.faruke.helperclock.view.customViews.ClockEditView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:onClickAction="delete"
                    android:layout_marginTop="8dp" />

                <dev.faruke.helperclock.view.customViews.ClockEditView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:onClickAction="delete"
                    android:layout_marginTop="8dp" />

                <dev.faruke.helperclock.view.customViews.AddButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/bg2"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saati sınava göre ayarla"
                    android:textColor="@color/onBg"
                    android:textSize="24sp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/bg0" />

                <dev.faruke.helperclock.view.customViews.ClockPatternCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    />

                <dev.faruke.helperclock.view.customViews.ClockPatternCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    />

                <dev.faruke.helperclock.view.customViews.AddButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</FrameLayout>