<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/custom_clock_view_bg"
    android:backgroundTint="@color/clockEditViewBg"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/viewClockEdittext_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="15 : 00"
        android:textSize="26sp"
        android:textColor="@color/onClockEditView"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/viewClockEdittext_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_icon_replace_black"
        app:layout_constraintBottom_toBottomOf="@+id/viewClockEdittext_text"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewClockEdittext_text"
        app:layout_constraintTop_toTopOf="@+id/viewClockEdittext_text" />
</androidx.constraintlayout.widget.ConstraintLayout>